{
    "name": "new-checkup-electron",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "start": "npm run build:css && electron .",
        "dist": "npm run build:css && electron-builder",
        "build:css": "tailwindcss -i ./src/input.css -o ./src/output.css",
        "watch:css": "tailwindcss -i ./src/input.css -o ./src/output.css --watch"
    },
    "devDependencies": {
        "@electron/rebuild": "^4.0.1",
        "electron": "^39.0.0",
        "electron-builder": "^24.13.3"
    },
    "build": {
        "appId": "com.pr9.display",
        "productName": "Display Checkup",
        "icon": "images/Logo.ico",
        "files": [
            "**/*"
        ],
        "asar": true,
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "artifactName": "DisplayCheckup-${version}.exe",
            "icon": "images/Logo.ico"
        },
        "nsis": {
            "oneClick": false,
            "include": "installer.nsh",
            "warningsAsErrors": false,
            "installerIcon": "images/Logo.ico",
            "uninstallerIcon": "images/Logo.ico",
            "installerHeaderIcon": "images/Logo.ico",
            "perMachine": false,
            "allowToChangeInstallationDirectory": false,
            "createDesktopShortcut": true,
            "shortcutName": "Display Checkup"
        }
    },
    "dependencies": {
        "@tailwindcss/cli": "^4.1.16",
        "axios": "^1.13.2",
        "dotenv": "^17.2.3",
        "jquery": "^3.7.1",
        "laravel-echo": "^2.2.6",
        "pusher-js": "^8.4.0",
        "sweetalert2": "^11.26.17",
        "tailwindcss": "^4.1.16"
    }
}
